{
   "type": "Microsoft.Authorization/policyDefinitions",
   "name": "tagging-real-name",
   "properties": {
      "displayName": "Real name tag on Azure resource",
      "description": "Real name tag on Azure resource. Example tag would look like real_name=4026f528e907f72906320aadc3751",
      "metadata":  {
         "category": "Tagging"
      },
      "mode": "All",
      "parameters": {
         "type": {
            "type": "array",
            "metadata": {
                "description": "Type of Azure Resource, such as Microsoft.Resources/subscriptions/resourceGroups",
                "displayName": "type",
                "strongType": "resourceTypes"
            }
        },
        "effect": {
          "type": "string",
          "allowedValues": [
            "Append",
            "Audit",
            "AuditIfNotExists",
            "Deny",
            "DeployIfNotExists",
            "Disabled"
          ],
          "metadata": {
            "displayName": "effect",
            "description": "Effect of policy, such as audit or deny"
          }
        }
      },
      "policyRule": {
         "if": {
            "allOf": [
               {
                  "field": "type",
                  "equals": "[parameters('type')]"
               },
               {
                  "not": {
                     "anyOf": [
                        {
                           "allOf": [
                              {
                                 "field": "type",
                                 "equals": "Microsoft.KeyVault/vaults"
                              },
                              {
                                 "anyOf": [
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-.."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-..."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-...."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-....."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-......"
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-......."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-KV-........"
                                    }
                                 ]
                              }
                           ]  
                        },
                        {
                           "allOf": [
                              {
                                 "field": "type",
                                 "equals": "Microsoft.Storage/storageAccounts"
                              },
                              {
                                 "anyOf": [
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-.."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-..."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-...."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-....."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-......"
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-......."
                                    },
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-SA-........"
                                    }
                                 ]
                              }
                           ]  
                        },
                        {
                           "allOf": [
                              {
                                 "field": "type",
                                 "equals": "Microsoft.OperationalInsights/workspaces"
                              },
                              {
                                 "anyOf": [
                                    {
                                       "field": "[concat('tags[','real_name', ']')]",
                                       "match": "[uniqueString(resourceGroup().id)]-WS-."
                                    },
                                    {
