{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Network/localNetworkGateways"
      },
      {
        "not": {
          "allOf": [
            {
              "anyOf": [
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-.-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-..-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-...-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-....-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-.....-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-......-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-.......-GW-*"
                },
                {
                  "field": "name",
                "match": "[uniqueString(resourceGroup().id)]-VN-........-GW-*"
                }
              ]
            },
            {
              "anyOf": [
                {
                  "field": "name",
                  "match": "*-GW-."
                },
                {
                  "field": "name",
                  "match": "*-GW-.."
                },
                {
                  "field": "name",
                  "match": "*-GW-..."
                },
                {
                  "field": "name",
                  "match": "*-GW-...."
                },
                {
                  "field": "name",
                  "match": "*-GW-....."
                },
                {
                  "field": "name",
                  "match": "*-GW-......"
                },
                {
                  "field": "name",
                  "match": "*-GW-......."
                },
                {
                  "field": "name",
                  "match": "*-GW-........"
                }
              ]
            }
          ]
        }
      }
    ]
  },
  "then": {
  "effect": "[parameters('effect')]"
  }
}
